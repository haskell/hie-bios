                        file-embed           >= 0.0.11 && < 1,
                        conduit              >= 1.3 && < 2,
                        conduit-extra        >= 1.3 && < 2


Executable hie-bios
  Default-Language:     Haskell2010
  Main-Is:              Main.hs
  Other-Modules:        Paths_hie_bios
  GHC-Options:          -Wall
  HS-Source-Dirs:       exe
  Build-Depends:        base >= 4.9 && < 5
                      , directory
                      , filepath
                      , ghc
                      , hie-bios
                      , optparse-applicative

