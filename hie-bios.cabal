  type: exitcode-stdio-1.0
  default-language: Haskell2010
  build-depends:
      base,
      aeson,
      filepath,
      hie-bios,
      tasty,
      tasty-hunit,
      text,
      unordered-containers,
      yaml

  hs-source-dirs: tests/
  ghc-options: -threaded -Wall
  main-is: ParserTests.hs

